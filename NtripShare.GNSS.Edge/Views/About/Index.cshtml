@using Microsoft.Extensions.Localization
@using NtripShare.GNSS.Edge.Controllers
@using System.Globalization
@inject IStringLocalizer<AboutController> StringLocalizer
@{
    ViewData["Title"] = "首页";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@StringLocalizer["Welcome"] - @StringLocalizer["SysName"]</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="stylesheet" href="~/lib/layuiadmin/layui/css/layui.css" media="all">
    <link rel="stylesheet" href="~/lib/layuiadmin/style/admin.css" media="all">
    <link rel="stylesheet" href="~/lib/layuiadmin/style/template.css" media="all">
</head>
<body>

    <div class="layui-fluid">
        <div class="layui-row layui-col-space15">
            <div class="layui-col-md12">
                <div class="layadmin-homepage-panel layadmin-homepage-shadow">
                    <div class="layui-card text-center">
                        <div class="layui-card-body">
                            <div class="layadmin-homepage-pad-ver">
                                <img class="layadmin-homepage-pad-img" src="~/lib/layuiadmin/style/res/template/portrait.png" width="96" height="96">
                            </div>
                            <h4 class="layadmin-homepage-font">NtripShare</h4>
                            <p class="layadmin-homepage-min-font">@StringLocalizer["SelfPositioning"]</p>
                            <div>
                                <div class="layui-btn-group">
                                    <a href="javascript:;" class="layui-btn layui-btn-sm">@StringLocalizer["GNSSCloud"]</a>
                                    <a href="javascript:;" class="layui-btn layui-btn-sm">@StringLocalizer["CORS"]</a>
                                    <a href="javascript:;" class="layui-btn layui-btn-sm">@StringLocalizer["GNSSReciever"]</a>
                                    <a href="javascript:;" class="layui-btn layui-btn-sm">@StringLocalizer["GNSSEdge"]</a>
                                    <a href="javascript:;" class="layui-btn layui-btn-sm">@StringLocalizer["MosCloud"]</a>
                                    <a href="javascript:;" class="layui-btn layui-btn-sm">@StringLocalizer["MosBox"]</a>
                                    <a href="javascript:;" class="layui-btn layui-btn-sm">@StringLocalizer["Suan"]</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="layadmin-homepage-pad-hor">
                        <ul class="layadmin-homepage-list-group">
                            <li class="list-group-item"><i class="layui-icon layui-icon-location"></i>@StringLocalizer["Tianjin"]</li>
                            <li class="list-group-item"><a href="javascript:;" class="color"><i class="layui-icon layui-icon-snowflake"></i><span style="word-wrap:break-word;">http://www.ntripshare.com</span></a></li>
                            <li class="list-group-item"><i class="layui-icon layui-icon-dialogue"></i>ntripshare@163.com</li>
                        </ul>

                    </div>
                    <div class="layadmin-homepage-pad-hor">
                        <ul class="layadmin-homepage-list-group">
                            <li class="list-group-item"><mdall>@StringLocalizer["Shuo1"]</mdall></li>
                            <li class="list-group-item"><mdall>@StringLocalizer["Shuo2"]</mdall></li>
                            <li class="list-group-item"><mdall>@StringLocalizer["Shuo3"]</mdall></li>
                            <li class="list-group-item"><mdall>@StringLocalizer["Shuo4"]</mdall></li>
                            <li class="list-group-item"><mdall>@StringLocalizer["Shuo5"]</mdall></li>
                            <li class="list-group-item"><mdall>@StringLocalizer["Shuo6"]</mdall></li>
                            <li class="list-group-item"><mdall>@StringLocalizer["Shuo7"]</mdall></li>
                            <li class="list-group-item"><mdall>@StringLocalizer["Shuo8"]</mdall></li>
                            <li class="list-group-item"><mdall>@StringLocalizer["Shuo9"]</mdall></li>
                        </ul>

                    </div>
                    <ul class="layadmin-homepage-pad-hor">
                    </ul>
                </div>
            </div>

        </div>
    </div>

    <script src="~/lib/layuiadmin/layui/layui.js"></script>
    <script>
        layui.config({
            base: '/lib/layuiadmin/' //静态资源所在路径
        }).extend({
            index: 'lib/index' //主入口模块
        }).use(['index']);
    </script>
</body>
</html>


