@using Microsoft.Extensions.Localization
@using NtripShare.GNSS.Edge.Controllers
@using System.Globalization
@inject IStringLocalizer<HomeController> StringLocalizer
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>@StringLocalizer["Welcome"] - @StringLocalizer["SysName"]</title>
	<meta name="renderer" content="webkit">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
	<link rel="stylesheet" href="~/lib/layuiadmin/layui/css/layui.css" media="all">
	<link rel="stylesheet" href="~/lib/layuiadmin/style/admin.css" media="all">
</head>
<body class="layui-layout-body">

	<div class="layui-fluid">
		<div class="layui-col-md12">
			<div class="layui-card" style="margin-bottom:60px; ">
				<div class="layui-card-header">@StringLocalizer["Version"]</div>
				<div class="layui-card-body" style="overflow:hidden">
					<table class="layui-table " lay-size="sm">
						<colgroup>
							<col width="100">
							<col>
						</colgroup>
						<tbody>
							<tr>
								<td>@StringLocalizer["Model"]</td>
								<td>@ViewData["Model"]</td>
							</tr>
							<tr>
								<td>@StringLocalizer["EfuseID"]</td>
								<td>@ViewData["EfuseID"]</td>
							</tr>
							<tr>
								<td>@StringLocalizer["HardwareVersion"]</td>
								<td>@ViewData["HardwareVersion"]</td>
							</tr>
							<tr>
								<td>@StringLocalizer["SwVersion"]</td>
								<td>@ViewData["SwVersion"]</td>
							</tr>
							<tr>
								<td>@StringLocalizer["WebVersion"]</td>
								<td>@ViewData["WebVersion"]</td>
							</tr>
							<tr>
								<td>@StringLocalizer["SoftKey"]</td>
								<td>@ViewData["SoftKey"]</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

	<script src="~/lib/layuiadmin/layui/layui.js"></script>
	<script>
		layui.config({
			base: '/lib/layuiadmin/' //静态资源所在路径
		}).extend({
			index: 'lib/index' //主入口模块
		}).use(['index', 'form', 'set', "ax"]);
	</script>
</body>
</html>


